@model FitnessPlanMVC.Application.ViewModels.Challenge.ChallengeDetailVm

@{
    ViewBag.Title = "Challenge Details";
    Layout = "_Layout";
}

<h2>@Model.Name</h2>

<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Duration:</strong> @Model.DurationInDays days</p>
<p><strong>Start Date:</strong> @Model.StartDate.ToShortDateString()</p>
<p><strong>End Date:</strong> @Model.EndDate.ToShortDateString()</p>

<form asp-action="Join" method="post">
    <input type="hidden" name="challengeId" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Join Challenge</button>
</form>
