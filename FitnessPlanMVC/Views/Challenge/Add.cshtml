@model FitnessPlanMVC.Application.ViewModels.Challenge.NewChallengeVm

@{
    ViewBag.Title = "Challenge Form";
    Layout = "_Layout";
}

<h1 class="page-title text-center">Add Challenge</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="DurationInDays">Duration (days)</label>
        <input asp-for="DurationInDays" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="StartDate">Start Date</label>
        <input asp-for="StartDate" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
