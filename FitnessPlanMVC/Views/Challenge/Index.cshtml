@model List<FitnessPlanMVC.Application.ViewModels.Challenge.ChallengeForListVm>

@{
    ViewBag.Title = "Challenges";
    Layout = "_Layout";
}

<h1 class="page-title text-center">Available Challenges</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-action="Add">Create New Challenge</a>
    <a class="btn btn-secondary" asp-action="MyChallenges">My Challenges</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Duration (days)</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.DurationInDays</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@item.EndDate.ToShortDateString()</td>
                <td>
                    <a class="btn btn-outline-primary btn-sm me-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-outline-warning btn-sm me-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
