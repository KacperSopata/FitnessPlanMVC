@using FitnessPlanMVC.Application.ViewModels.Calculator
@model FitnessPlanMVC.Application.ViewModels.Calculator.Calculator

@{
    ViewBag.Title = "CPM - Total Metabolic Rate";
    Layout = "_Layout";
}

<div class="card-form-container">
    <h1 class="title">CPM - Total Metabolic Rate</h1>

    <form asp-action="Index" method="post" class="form-card">
        <div class="form-group">
            <label asp-for="Gender">Gender</label>
            <select asp-for="Gender" class="form-control">
                <option value="">Select Gender</option>
                @foreach (var gender in Model.Genders)
                {
                    <option value="@gender">@gender</option>
                }
            </select>
            <span asp-validation-for="Gender" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Age">Age</label>
            <input asp-for="Age" class="form-control" />
            <span asp-validation-for="Age" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Weight">Weight (kg)</label>
            <input asp-for="Weight" class="form-control" />
            <span asp-validation-for="Weight" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Height">Height (cm)</label>
            <input asp-for="Height" class="form-control" />
            <span asp-validation-for="Height" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Goal">Goal</label>
            <select asp-for="Goal" class="form-control">
                <option value="">Choose a Goal</option>
                @foreach (var goal in Model.Goals)
                {
                    <option value="@goal">@goal</option>
                }
            </select>
            <span asp-validation-for="Goal" class="text-danger small"></span>
        </div>

        <div class="form-group">
            <label asp-for="Pal">Activity Level</label>
            <select asp-for="Pal" class="form-control">
                <option value="">Select Activity Factor</option>
                @foreach (var pal in Model.Pals)
                {
                    <option value="@pal.Key">@pal.Key - @pal.Value</option>
                }
            </select>
            <span asp-validation-for="Pal" class="text-danger small"></span>
        </div>

        <div class="form-group text-center mt-3">
            <button type="submit" class="btn btn-black">Calculate</button>
        </div>
    </form>

    @if (Model.CPM.HasValue)
    {
        <div class="result-card">
            <h3>Your Total Metabolic Rate:</h3>
            <p class="cpm-value">@Model.CPM.Value.ToString("F0") kcal</p>
        </div>
    }
</div>
