@model FitnessPlanMVC.Application.ViewModels.Post.ListPost

@{
    ViewBag.Title = "Posts";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="page-title text-center mb-4">Knowledge Base – Posts</h1>

    <form method="get" asp-action="Index" class="d-flex justify-content-center mb-4">
        <input type="text" name="searchString" value="@Model.SearchString" placeholder="Search posts..." class="form-control w-25 me-2" />
        <button type="submit" class="btn">Search</button>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Posts.Any())
            {
                foreach (var post in Model.Posts)
                {
                    <tr>
                        <td>@post.Title</td>
                        <td>@post.ShortContent</td>
                        <td class="d-flex gap-2">
                            <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-sm">Details</a>
                            <form asp-action="Delete" asp-route-id="@post.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr><td colspan="3" class="text-center">No posts available.</td></tr>
            }
        </tbody>
    </table>

    <div class="pagination">
        Page: @Model.CurrentPage of @((Model.Count + Model.PageSize - 1) / Model.PageSize)
    </div>

    <div class="mt-3">
        <a asp-action="Create" class="btn">Add new post</a>
    </div>
</div>
