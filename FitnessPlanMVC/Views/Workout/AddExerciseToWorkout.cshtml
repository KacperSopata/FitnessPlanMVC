@model FitnessPlanMVC.Application.ViewModels.Workout.NewWorkoutExerciseVm
@{
    ViewBag.Title = "Add Exercise";
    Layout = "_Layout";
}

<h2>Add Exercise</h2>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddExerciseToWorkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" name="WorkoutId" value="@Model.WorkoutId" />

            <select id="exerciseList" name="ExerciseId">
                <option value="">Select an Exercise</option>
                @foreach (var exercise in Model.Exercises)
                {
                    <option value="@exercise.Id">@exercise.Name</option>
                }
            </select>

            <div class="form-group">
                <label asp-for="Sets" class="control-label">Number of Sets</label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reps" class="control-label">Number of Repetitions</label>
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label">Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>