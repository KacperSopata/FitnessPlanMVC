@model FitnessPlanMVC.Application.ViewModels.Workout.NewWorkoutExerciseVm

@{
    ViewData["Title"] = "Add Exercise";
    Layout = "_Layout";
}

<h2 class="text-center">Add Exercise</h2>

<div class="card shadow-sm mx-auto mt-4" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="AddExerciseToWorkout" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @Html.HiddenFor(m => m.WorkoutId)

            <div class="form-group mb-3">
                <label asp-for="ExerciseId" class="form-label">Exercise</label>
                <select asp-for="ExerciseId" asp-items="@(new SelectList(Model.Exercises, "Id", "Name"))" class="form-select">
                    <option value="">-- Select exercise --</option>
                </select>
                <span asp-validation-for="ExerciseId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Sets" class="form-label">Number of Sets</label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Reps" class="form-label">Number of Repetitions</label>
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Weight" class="form-label">Weight</label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Add</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
