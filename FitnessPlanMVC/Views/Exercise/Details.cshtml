@model FitnessPlanMVC.Application.ViewModels.Exercise.ExerciseDetailVm

@{
    ViewBag.Title = "Exercise Details";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="mb-4 text-center">@Model.Name</h2>

        <div class="row mb-3">
            <div class="col">
                <h5><strong>Description:</strong></h5>
                <p>@Model.Description</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <h5><strong>Instruction:</strong></h5>
                <p>@Model.Instruction</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <h5><strong>Tips:</strong></h5>
                <p>@Model.Tips</p>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col">
                <h5><strong>Involved Parties:</strong></h5>
                <p>@Model.InvolvedParties</p>
            </div>
        </div>
        <div class="text-center mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back to list</a>
        </div>
    </div>
</div>
